<launch>
  
  <let name="vocab_path" 
      value="$(find-pkg-share orbslam3)/vocabulary/ORBvoc.txt" />

  <let name="camera_config_path" 
       value="$(find-pkg-share orbslam3)/config/stereo/RealSense_D435i.yaml" />

  <!-- General: Start ORB-SLAM3 -->
  <node pkg="orbslam3" exec="stereo" output="screen"
        args="$(var camera_config_path) $(var vocab_path) BOOL_RECTIFY"/>

</launch>
